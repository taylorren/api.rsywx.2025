{
    "name": "rsywx/api",
    "description": "Personal library management API",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "php-di/php-di": "^6.0",
        "monolog/monolog": "^2.0",
        "vlucas/phpdotenv": "^5.0",
        "zircote/swagger-php": "^4.0"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "^3.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "docs": "php generate-docs.php",
        "docs:generate": "php generate-docs.php",
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=\"Unit Tests\"",
        "test-integration": "phpunit --testsuite=\"Integration Tests\"",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}